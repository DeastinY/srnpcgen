#!/usr/bin/python
# -*- coding: latin-1 -*-
#:kivy 1.9.0

<AttrButton>:
    font_size: '21sp'
    text_size: self.size
    halign: 'center'
    valign: 'middle'

GridLayout:
    cols: 1
    padding: 10
    spacing: 10
    canvas:
        Color:
            rgba: 1, .3, .9, .5
    AttrButton:
        text: str(app.Char.Name)
        on_press: self.text=str(app.Char.RandName())
    AttrButton:
        text: str(app.Char.Gender)
        on_press: self.text=app.Char.RandGender()
    AttrButton:
        text: str(app.Char.Age)
        on_press: self.text=app.Char.RandAge()
    AttrButton:
        text: str(app.Char.Metatype)
        on_press: self.text=app.Char.RandMetatype()
    AttrButton:
        text: str(app.Char.Traits)
        on_press: self.text=str(app.Char.RandTraits())
    AttrButton:
        text: str(app.Char.Special)
        on_press: self.text=str(app.Char.RandSpecial())
